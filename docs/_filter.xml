<?xml version="1.0" encoding="utf-8"?>
<filter>
  <apiFilter apply="true">
      <!-- Filter out System.Drawing to avoid conflict with BCL -->
      <namespaceFilter name="System.Drawing">
        <typeFilter name="*" expose="false"/>
      </namespaceFilter>
    
    <!-- Filter out internal namespaces -->
      <namespaceFilter name="Xamarin.Forms.Internals">
        <typeFilter name="*" expose="false"/>
      </namespaceFilter>
      <namespaceFilter name="Xamarin.Forms.Xaml.Internals">
        <typeFilter name="*" expose="false"/>
      </namespaceFilter>
    
    <!-- Filter out types that are in binary, but hidden behind feature flags -->
      <namespaceFilter name="*">
        <!-- Hide until 3.6 stable -->
        <typeFilter name="ResourceLoader+ResourceLoadingQuery" expose="false"/>
        <typeFilter name="ResourceLoader+ResourceLoadingResponse" expose="false"/>
        <!-- Hide until 4.0 stable -->
        <typeFilter name="BackButtonBehavior" expose="false"/>
        <typeFilter name="BaseShellItem" expose="false"/>
        <typeFilter name="CarouselView" expose="false"/>
        <typeFilter name="CollectionView" expose="false"/>
        <typeFilter name="FlyoutBehavior" expose="false"/>
        <typeFilter name="FlyoutDisplayOptions" expose="false"/>
        <typeFilter name="FlyoutHeaderBehavior" expose="false"/>
        <typeFilter name="GridItemsLayout" expose="false"/>
        <typeFilter name="IAppearanceObserver" expose="false"/>
        <typeFilter name="IDataTemplateController" expose="false"/>
        <typeFilter name="IFlyoutBehaviorObserver" expose="false"/>
        <typeFilter name="IItemsLayout" expose="false"/>
        <typeFilter name="INavigationProxy" expose="false"/>
        <typeFilter name="IQueryAttributable" expose="false"/>
        <typeFilter name="ISearchHandlerController" expose="false"/>
        <typeFilter name="IShellAppearanceElement" expose="false"/>
        <typeFilter name="IShellContentController" expose="false"/>
        <typeFilter name="IShellContentIntentObserver" expose="false"/>
        <typeFilter name="IShellController" expose="false"/>
        <typeFilter name="IShellItemController" expose="false"/>
        <typeFilter name="IShellSectionController" expose="false"/>
        <typeFilter name="ItemsLayout" expose="false"/>
        <typeFilter name="ItemsLayoutOrientation" expose="false"/>
        <typeFilter name="ItemsView" expose="false"/>
        <typeFilter name="IVisual" expose="false"/>
        <typeFilter name="ListItemsLayout" expose="false"/>
        <typeFilter name="ListProxyChangedEventArgs" expose="false"/>
        <typeFilter name="MenuItemCollection" expose="false"/>
        <typeFilter name="MenuShellItem" expose="false"/>
        <typeFilter name="NavigableElement" expose="false"/>
        <typeFilter name="NavigationRequestType" expose="false"/>
        <typeFilter name="QueryPropertyAttribute" expose="false"/>
        <typeFilter name="RouteFactory" expose="false"/>
        <typeFilter name="Routing" expose="false"/>
        <typeFilter name="ScrollToRequestEventArgs" expose="false"/>
        <typeFilter name="SearchBoxVisibility" expose="false"/>
        <typeFilter name="SearchHandler" expose="false"/>
        <typeFilter name="SelectableItemsView" expose="false"/>
        <typeFilter name="SelectionChangedEventArgs" expose="false"/>
        <typeFilter name="SelectionMode" expose="false"/>
        <typeFilter name="Shell" expose="false"/>
        <typeFilter name="ShellAppearance" expose="false"/>
        <typeFilter name="ShellContent" expose="false"/>
        <typeFilter name="ShellContentCollection" expose="false"/>
        <typeFilter name="ShellGroupItem" expose="false"/>
        <typeFilter name="ShellItem" expose="false"/>
        <typeFilter name="ShellItem" expose="false"/>
        <typeFilter name="ShellItemCollection" expose="false"/>
        <typeFilter name="ShellNavigatedEventArgs" expose="false"/>
        <typeFilter name="ShellNavigatingEventArgs" expose="false"/>
        <typeFilter name="ShellNavigationSource" expose="false"/>
        <typeFilter name="ShellNavigationSource" expose="false"/>
        <typeFilter name="ShellNavigationState" expose="false"/>
        <typeFilter name="ShellSection" expose="false"/>
        <typeFilter name="ShellSection+NavigationImpl" expose="false"/>
        <typeFilter name="ShellSectionCollection" expose="false"/>
        <typeFilter name="VisualMarker" expose="false"/>
        <typeFilter name="VisualRendererMarker" expose="false"/>
        <typeFilter name="VisualRendererMarker+Default" expose="false"/>
        <typeFilter name="VisualRendererMarker+Material" expose="false"/>
        <typeFilter name="VisualTypeConverter" expose="false"/>
      </namespaceFilter>
  </apiFilter>
</filter>
